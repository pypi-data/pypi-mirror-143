version: 1
name: {{service_name}}

build:
    {{build_type}}:
    {% for key, value in build_dict.items() -%}
        {{key}}: {{value}}
    {% endfor %}

deploy:
    {{deploy_type}}::

stages:
    {% for stage, variable in stage_params.items() -%}
    {{stage}}:
        {% for key, value in variable.items() -%}
        {{key}}: {{value}}
        {% endfor %}
    {% endfor %}
