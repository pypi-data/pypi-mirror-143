{
    "title": "Strategy schema",
    "type": "object",
    "properties": {
        "campaign_id": {
            "type": "integer",
            "minimum": 1,
            "example": 15
        },
        "name": {
            "type": "string",
            "example": "Strategy #1",
            "maxLength": 128
        },
        "status": {
            "type": "boolean",
            "example": true
        },
        "input_type": {
            "type": "string",
            "example": "fixed"
        },
        "pacing_interval": {
            "type": "string",
            "example": "hour"
        },
        "pacing_type": {
            "type": "string",
            "example": "even"
        },
        "impression_pacing_interval": {
          "type": "string",
          "example": "hour"
        },
        "impression_pacing_type": {
            "type": "string",
            "example": "asap"
        },
        "min_bid": {
            "anyOf": [
                {
                    "type": "number",
                    "format": "double",
                    "example": 10.2
                },
                {
                    "type": "null"
                }
            ]
        },
        "max_bid": {
            "anyOf": [
                {
                    "type": "number",
                    "format": "double",
                    "example": 10.2
                },
                {
                    "type": "null"
                }
            ]
        },
        "use_optimization": {
            "type": "boolean",
            "default": false
        },
        "goal_type": {
            "type": "string",
            "example": "roi"
        },
        "goal_value": {
            "anyOf": [
                {
                    "type": "number",
                    "format": "double",
                    "example": 10.2
                },
                {
                    "type": "integer",
                    "example": 11
                },
                {
                    "type": "null"
                }
            ]
        },
        "roi_target": {
            "anyOf": [
                {
                    "type": "number",
                    "format": "double",
                    "example": 10.2
                },
                {
                    "type": "null"
                }
            ]
        },
        "frequency_type": {
            "type": "string",
            "example": "even"
        },
        "frequency_interval": {
            "type": "string",
            "example": "day"
        },
        "cost_passthrough_cpm_enabled": {
            "type": "boolean",
            "default": false
        },
        "cost_passthrough_percent_enabled": {
            "type": "boolean",
            "default": false
        }
    },
    "required": ["campaign_id", "name", "status"]
}
